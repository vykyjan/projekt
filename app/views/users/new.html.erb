<% provide(:title, 'Sign up') %>
<div class="container marketing">



<div class="row">
  <h1>Registrovat</h1>
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name, "Jméno" %>
        <%= f.text_field :name %>

        <%= f.label :surname, "Příjmení" %>
        <%= f.text_field :surname %>


        <%= f.label :email %>
        <%= f.text_field :email %>
        <span>
        <%= f.label :person,"Počet osob" %>
        <%= f.text_field :person %>
        </span>
        <%= f.label :password, "Heslo" %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Znovu heslo" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Vytvořit účet", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
  </div>
</div>