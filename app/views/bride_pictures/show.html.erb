<div class="container marketing">

  <div class="row">
    <%- model_class = @bride_picture.class -%>
    <div class="page-header">
      <h1><%=t '.title', :default => model_class.model_name.human %></h1>
    </div>

    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
      <dd><%= @bride_picture.description %></dd>
      <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
      <dd><%= @bride_picture.image %></dd>
      <dt><strong><%= model_class.human_attribute_name(:bride_gallery_id) %>:</strong></dt>
      <dd><%= @bride_picture.bride_gallery_id %></dd>
    </dl>

    <div class="form-actions">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                  bride_pictures_path, :class => 'btn'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_bride_picture_path(@bride_picture), :class => 'btn' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  bride_picture_path(@bride_picture),
                  :method => 'delete',
                  :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                  :class => 'btn btn-danger' %>
    </div>
  </div></div>