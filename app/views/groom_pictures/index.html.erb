<div class="row">
  <div class="container marketing">
<%- model_class = GroomPicture.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:description) %></th>
    <th><%= model_class.human_attribute_name(:image) %></th>
    <th><%= model_class.human_attribute_name(:gallery_id) %></th>
    <th><%= model_class.human_attribute_name(:created_at) %></th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @groom_pictures.each do |groom_picture| %>
      <tr>
        <td><%= link_to groom_picture.id, groom_picture_path(groom_picture) %></td>
        <td><%= groom_picture.description %></td>
        <td><%= groom_picture.image %></td>
        <td><%= groom_picture.groom_gallery_id %></td>
        <td><%=l groom_picture.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_groom_gallery_groom_picture_path(groom_picture), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      groom_gallery_groom_picture_path(groom_picture),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_groom_gallery_groom_picture_path,
            :class => 'btn btn-primary' %>
</div></div>